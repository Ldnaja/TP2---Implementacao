<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaGerenciamento">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="101dp"
        android:text="Tela de Gerenciamento"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCadastrarCliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonEditarFuncionarios"
        android:layout_width="231dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        android:text="Editar Funcionarios"
        app:layout_constraintStart_toStartOf="@+id/buttonCadrastarVeterinario"
        app:layout_constraintTop_toBottomOf="@+id/buttonCadrastarVeterinario" />

    <Button
        android:id="@+id/buttonConsulta"
        android:layout_width="222dp"
        android:layout_height="45dp"
        android:layout_marginBottom="200dp"
        android:text="Marcar Consulta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:id="@+id/buttonDesmarcarConsulta"
        android:layout_width="221dp"
        android:layout_height="43dp"
        android:layout_marginBottom="108dp"
        android:text="Desmarcar Consulta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonCadastrarCliente"
        android:layout_width="238dp"
        android:layout_height="49dp"
        android:layout_marginBottom="65dp"
        android:text="Informações dos Clientes"
        app:layout_constraintBottom_toTopOf="@+id/buttonCadrastarVeterinario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/buttonCadrastarVeterinario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="296dp"
        android:text="Informações dos Veterinarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>